from PIL import Image, ImageDraw


def careful_flight(name, savename):
    image = Image.open(name)
    draw = ImageDraw.Draw(image)
    width = image.size[0]
    height = image.size[1]
    pix = image.load()
    for x in range(width):
        for y in range(height):
            r = pix[x, y][0]
            g = pix[x, y][1]
            b = pix[x, y][2]
            sr = (r + g + b) // 3
            draw.point((x, y), (sr, sr, sr))
    im = image.transpose(Image.FLIP_TOP_BOTTOM)
    im.save(savename)
